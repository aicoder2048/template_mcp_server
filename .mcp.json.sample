{
  "mcpServers": {
    "YourServerName": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "/path/to/your/project/main.py"
      ],
      "env": {
        "LOG_LEVEL": "INFO",
        "PYTHONPATH": "/path/to/your/project",
        "MCP_SERVER_NAME": "YourServerName",
        "MCP_VERSION": "1.0.0",
        "DEBUG": "false",
        "MAX_PROMPT_CALLS": "10",
        "ENABLE_METRICS": "false"
      }
    }
  }
}
