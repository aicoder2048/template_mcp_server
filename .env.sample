# =============================================================================
# MCP Server Environment Configuration Sample
# =============================================================================
# Copy this file to .env and customize the values for your environment
# The .env file is gitignored and will not be committed to the repository

# -----------------------------------------------------------------------------
# Server Identification
# -----------------------------------------------------------------------------
# The name of your MCP server (customize this for your project)
MCP_SERVER_NAME=YourServerName

# Server version (semantic versioning recommended)
MCP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=false

# -----------------------------------------------------------------------------
# Extended Configuration
# -----------------------------------------------------------------------------
# Maximum number of prompt calls allowed
MAX_PROMPT_CALLS=10

# Enable metrics collection (true/false)
ENABLE_METRICS=false

# -----------------------------------------------------------------------------
# Python Environment
# -----------------------------------------------------------------------------
# Python path for the project (update to your actual project path)
# This is used by Claude Code MCP integration
PYTHONPATH=/path/to/your/project

# -----------------------------------------------------------------------------
# Future Configuration Options
# -----------------------------------------------------------------------------
# Add your custom configuration variables below as needed
# Example:
# API_KEY=your-api-key-here
# DATABASE_URL=postgresql://localhost/dbname
# REDIS_URL=redis://localhost:6379
